<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:text="Drywall  is a product of GocalSD."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView20"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView21"
        android:textColor="@color/dialogcontent"
        android:textStyle="normal|bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_expand"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView4" />

    <TextView
        android:text="Learn more by swiping up."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView22"
        android:textColor="@color/dialogcontent"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Drywall is a fork of Paperboard's wallpaper services orignally developed by Jahir Fiquitiva. The end goal is to provide users a unique set of wallpapers by category and design."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:gravity="center"
        android:textColor="@color/dialogcontent"
        android:textSize="14sp"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView3"
        android:layout_above="@+id/textView17"
        android:layout_centerHorizontal="true"
        android:layout_width="112dp"
        android:layout_height="112dp" />

    <TextView
        android:text="About Drywall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:textColor="@color/dark_grey"
        android:textSize="36sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>